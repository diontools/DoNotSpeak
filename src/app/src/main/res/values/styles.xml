<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme" parent="android:Theme.DeviceDefault">
    </style>

    <!-- White notification theme for Android 9 and before. -->
    <style name="AppNotificationTheme" parent="android:Theme.DeviceDefault.Light">
    </style>

    <!-- Disable animation -->
    <style name="DisableAnimationDialogTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
