<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="wrap_content"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp" android:paddingBottom="8dp" android:paddingLeft="16dp"
            android:paddingRight="16dp" android:paddingTop="8dp">
        <ImageView
                android:layout_width="64dp"
                android:id="@+id/imageView"
                android:layout_weight="1" android:src="@drawable/ic_launcher" android:layout_height="match_parent"
        />
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"
                android:paddingLeft="8dp" android:paddingRight="8dp" android:gravity="center_vertical"/>
    </LinearLayout>
</FrameLayout>
