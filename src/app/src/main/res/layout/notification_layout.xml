<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="5dp">

    <ImageView
            android:layout_width="60dp"
            android:id="@+id/imageView"
            android:layout_weight="1" android:src="@drawable/ic_launcher" android:layout_height="40dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"
            android:paddingLeft="5dp"/>
</LinearLayout>
